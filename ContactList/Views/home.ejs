<html>
<head>
<title>
<%= title %>
</title>

<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<link rel="stylesheet" href="/css/home.css">
</head>
<body>

    <div id="main">
        <div id="div1">
        <ul>
    
    <h1 style="color: gray ; font-family: Arial, Helvetica, sans-serif;"><i class="fas fa-address-book" style="padding: 5px;"  ></i>My Contact List</h1>
    <%
    for(let i of Contact_list){%>
        <li>
            <div id="details">
    <p id="p1"><%=i.name%></p>
    <p id="p2"><%=i.phone%></p>
     
    </div>
    <div class="delete">
    <a href="/delete-contact/?id=<%= i._id %>">
        <i class="fas fa-window-close"></i>
    </a>
    </li>
    
    
    <%}
    
    %>
    
    </div>
    <form action="/contact" method="POST" >
    
        <input type="text"  name="name" placeholder="Enter Name" required>
        <input type="text"  name="phone" placeholder="+91" required>
        <button type="submit">Add</button>
    </form>

    </body>
    </div>

</html>